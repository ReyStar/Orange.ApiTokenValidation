{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Kestrel": {
    "DefaultHttpsPort": 60001, //Re-direction to https work incorrectly when configuration contains two or more https configurations or no one https config
    "Endpoints": {
      "Http": {
        "Url": "http://*:60000",
        "Protocols": "Http1AndHttp2",
        "Scheme": "http"
      },
      "HttpsDefaultCert": {
        "Url": "https://*:60001",
        "Protocols": "Http1AndHttp2",
        "Scheme": "https"
      }
      //"Https": {
      //  "Url": "https://*:60004",
      //  "Protocols": "Http1AndHttp2",
      //  "Certificate": {
      //    "Path": "SomeCertificate.pfx",
      //    "Password": "123456789",
      //    "Scheme": "https"
      //  }
      //}
    }
  },
  //"AllowedHosts": "*",
  "DataSourceConfiguration": {
    "ConnectionString": "Password=sqlpassword;Username=sqluser;Port=5432;Host=localhost;Database=tokenDB"
  },
  "TokenServiceConfiguration": {
    "ClockSkew": "00:05:00"
  },
  "TokenNotifierConfig": {
    "Servers": [ "localhost:9092" ]
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss.fff}][{Level:u3}] CorrelationID:{CorrelationID} {RequestId}{RequestPath}{SourceContext} {Message}{NewLine}{Exception}"
        }
      },
      {
        "Name": "RollingFile",
        "Args": {
          "pathFormat": "Orange.ApiTokenValidation.{Date}.log",
          "fileSizeLimitBytes": 1024,
          "outputTemplate": "[{Timestamp:HH:mm:ss.fff}][{Level}] [{ThreadId}|{MemoryUsage}|{ThreadMemoryUsage}|{Generations}] {Message}{NewLine}{Exception}"
        }
      }
      //{
      //  "Name": "File",
      //  "Args": {
      //    "path": "Orange.ApiTokenValidation-.txt",
      //    "rollingInterval": "Day",
      //    "outputTemplate": "[{Timestamp:HH:mm:ss.fff}][{Level}] [{ThreadId}|{MemoryUsage}|{ThreadMemoryUsage}|{Generations}] {Message}{NewLine}{Exception}"
      //  }
      //}
    ],
    "Enrich": [
      "WithEnvironmentUserName",
      "WithMachineName",
      "WithProcessId",
      "WithProcessName",
      "WithThreadId",
      "WithMemoryUsage",
      "FromLogContext"
      // "WithCorrelationId",
      // "WithCorrelationIdHeader"
    ],
    "Properties": {
      "Application": "Sample",
      "Environment": "Test"
    }
  }
}
